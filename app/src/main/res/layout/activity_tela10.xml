<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tela10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:backgroundTint="#2196F3"
        tools:context=".tela10">

        <TextView
            android:id="@+id/txt10"
            android:layout_width="390dp"
            android:layout_height="133dp"
            android:lineSpacingExtra="0sp"
            android:text="Quem foi a única pessoa na história a receber o Prêmio Nobel em áreas científicas diferentes?"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.208" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="165dp"
            android:layout_height="35dp"
            android:lineSpacingExtra="0sp"
            android:text="Questão 10/10"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.068" />

        <RadioGroup
            android:id="@+id/radioGroup10"
            android:layout_width="374dp"
            android:layout_height="196dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.547">

            <RadioButton
                android:id="@+id/rdo91"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Albert Einstein" />

            <RadioButton
                android:id="@+id/rdo92"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Linus Pauling" />

            <RadioButton
                android:id="@+id/rdo93"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stephen Hawking" />

            <RadioButton
                android:id="@+id/rdo94"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marie Curie" />
        </RadioGroup>

        <Button
            android:id="@+id/btnProximo10"
            android:layout_width="202dp"
            android:layout_height="69dp"
            android:backgroundTint="#C1FF0000"
            android:text="Pontuação"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.85" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>